NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/moneysaver_db
DATABASE_SSL=false

# Redis
REDIS_URL=redis://localhost:6379

# MongoDB
MONGODB_URL=mongodb://localhost:27017/moneysaver_analytics

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_REFRESH_EXPIRY=30d

# Encryption Keys
ENCRYPTION_KEY=32_character_encryption_key_here
ENCRYPTION_IV=16_char_iv_here

# API Keys
API_KEY_INTERNAL=internal_api_key_for_service_to_service

# NPCI UPI Gateway (Sandbox for development)
NPCI_GATEWAY_URL=https://sandbox.npci.org.in/gateway/api
NPCI_API_KEY=sandbox_api_key
NPCI_API_SECRET=sandbox_secret
NPCI_MERCHANT_ID=TEST_MERCHANT_001

# Bank API Gateway (if using aggregator)
BANK_GATEWAY_URL=https://bankgateway.example.com
BANK_GATEWAY_API_KEY=bank_api_key
BANK_API_TIMEOUT=30000

# Email Service (SendGrid)
SENDGRID_API_KEY=sg_api_key
SENDER_EMAIL=noreply@moneysaver.in

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=account_sid
TWILIO_AUTH_TOKEN=auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_PHONE=+1234567890

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=aws_access_key
AWS_SECRET_ACCESS_KEY=aws_secret_key
AWS_S3_BUCKET=moneysaver-uploads
AWS_KMS_KEY_ID=kms_key_id

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,https://app.moneysaver.in

# Features
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PAYMENT_REQUESTS=true
ENABLE_MANDATES=true
ENABLE_ANALYTICS=true

# Machine Learning Service
ML_SERVICE_URL=http://localhost:5000
ML_SERVICE_API_KEY=ml_api_key

# Audit & Compliance
AUDIT_LOGS_ENABLED=true
PII_ENCRYPTION_ENABLED=true
DATA_LOCALIZATION_ENABLED=true
